           <script>
             
              function refresh(){
                  var month = id=$("#month").val(),
                      year = id=$("#year").val(),
                      date = year+"-"+month;
                  $.ajax({
                      type: "GET",
                      url: "/get_absences_etudiant",
                      data: { date: date},
                      success: function(data){
                        document.getElementById("nbr_absences").innerHTML = "Total: "+data.length+" séances";
                        var tbody = document.getElementById('tbody');
                        tbody.innerHTML = "";
                        var body = "";
                        number_days = new Date(year, month, 0).getDate();
                        for(i= 1;i<=number_days;i++){
                            if(i<10) day = date +"-0"+i;
                            else day = date +"-"+i;
                            body += "<tr>"
                            body += "<th style='text-align: center;'>"+i+"/"+month+"/"+year+"</th>";
                            if(data.length){
                              abs9 = abs11 = abs14 = abs16 = 0;
                              justifie9 = justifie11 = justifie14 = justifie16 = 0;
                              list = [];
                              jQuery.each(data, function() {
                                if(this.date_heure.startsWith(day)){
                                  list.push(this);
                                }
                              });

                              jQuery.each(list, function() {
                                if(this.date_heure.startsWith(day+' 09')){
                                  abs9++;
                                  justifie9 = this.justifie;
                                }
                                if(this.date_heure.startsWith(day+' 11')){
                                  abs11++;
                                  justifie11 = this.justifie;
                                }
                                if(this.date_heure.startsWith(day+' 14')){
                                  abs14++;
                                  justifie14 = this.justifie;
                                }
                                if(this.date_heure.startsWith(day+' 16')){
                                  abs16++;
                                  justifie16 = this.justifie;
                                }
                              });
                              
                            }
                            else{
                              abs9 = abs11 = abs14 = abs16 = 0;
                              justifie9 = justifie11 = justifie14 = justifie16 = 0;
                            }

                            //Colors
                            color9 = color11 = color14 = color16 = "rgb(155, 111, 111)";
                            if(justifie9){
                              color9 = "rgb(71, 163, 133)";
                            }
                            if(justifie11){
                              color11 = "rgb(71, 163, 133)";
                            }
                            if(justifie14){
                              color14 = "rgb(71, 163, 133)";
                            }
                            if(justifie16){
                              color16 = "rgb(71, 163, 133)";
                            }
                            
                            //Print
                            if(abs9){
                              body += "<td style='text-align: center; color: "+color9+"; font-weight: bold; border-left: 1px solid #555'>X</td>";
                            }else{
                              body += "<td style='border-left: 1px solid #555'> </td>";
                            }
                            if(abs11){
                              body += "<td style='text-align: center; color: "+color11+"; font-weight: bold;'>X</td>";
                            }else{
                              body += "<td></td>";
                            }
                            if(abs14){
                              body += "<td style='text-align: center; color: "+color14+"; font-weight: bold;'>X</td>";
                            }else{
                              body += "<td></td>";
                            }
                            if(abs16){
                              body += "<td style='text-align: center; color: "+color16+"; font-weight: bold; border-right: 1px solid #555'>X</td>";
                            }else{
                              body += "<td style='border-right: 1px solid #555'> </td>";
                            }

                            body += "</tr>";
                        }
                        
                        tbody.innerHTML = body;
                        
                      }
                  });
              }
           </script>
