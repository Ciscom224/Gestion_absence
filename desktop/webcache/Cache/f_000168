<script>
    document.getElementById('presences').innerHTML = pres;
    document.getElementById('absences_j').innerHTML = abs_j;
    document.getElementById('absences_nj').innerHTML = abs_nj;

    var perc_presences = Math.round(100 * (pres)/0),
    perc_absences_j = Math.round(100 * (abs_j)/0),
    perc_absences_nj = Math.round(100 - perc_presences - perc_absences_j);

    document.getElementById('perc_presences').innerHTML = "+" + perc_presences + "%";
    document.getElementById('perc_absences_j').innerHTML = "-"+ perc_absences_j + "%";
    document.getElementById('perc_absences_nj').innerHTML = "-"+ perc_absences_nj + "%";

    document.getElementById('progress_presences').style.width = perc_presences + "%";
    document.getElementById('progress_absences_j').style.width =perc_absences_j + "%";
    document.getElementById('progress_absences_nj').style.width =perc_absences_nj + "%";

    function counter_check(){
        abs_j = 0;
        abs_nj = 0;
        pres = 0;
        inputs = document.querySelectorAll('[type="radio"]');
        inputs.forEach(element => {
            if(document.getElementById(element.id).checked){
                valueSelected = element.value;
            console.log(valueSelected);
                if(valueSelected.startsWith("present"))
                    pres++;
                else if(valueSelected.startsWith("absent_nj"))
                    abs_nj++;
                else
                    abs_j++;
            }
        });

        document.getElementById('presences').innerHTML = pres;
        document.getElementById('absences_j').innerHTML = abs_j;
        document.getElementById('absences_nj').innerHTML = abs_nj;

        var perc_presences = Math.round(100 * (pres)/0),
            perc_absences_j = Math.round(100 * (abs_j)/0),
            perc_absences_nj = Math.round(100 - perc_presences - perc_absences_j);

        document.getElementById('perc_presences').innerHTML = "+" + perc_presences + "%";
        document.getElementById('perc_absences_j').innerHTML = "-"+ perc_absences_j + "%";
        document.getElementById('perc_absences_nj').innerHTML = "-"+ perc_absences_nj + "%";

        document.getElementById('progress_presences').style.width = perc_presences + "%";
        document.getElementById('progress_absences_j').style.width =perc_absences_j + "%";
        document.getElementById('progress_absences_nj').style.width =perc_absences_nj + "%";

        
    }

    function radio_check(value) {
        id = value.id;
        if(id.startsWith('present')){
            new_id = id.substring(7);
            id_present = id;
            id_absent_j = 'absent_j' + new_id;
            id_absent_nj = 'absent_nj' + new_id;
            document.querySelector('[for='+id_present+']').style.backgroundColor="#337ab7";
            document.querySelector('[for='+id_absent_j+']').style.backgroundColor="#fff";
            document.querySelector('[for='+id_absent_nj+']').style.backgroundColor="#fff";
            document.querySelector('[for='+id_present+']').style.color="#fff";
            document.querySelector('[for='+id_absent_j+']').style.color="#f0ad4e";
            document.querySelector('[for='+id_absent_nj+']').style.color="#d9534f";
        }else if(id.startsWith('absent_j')){
            new_id = id.substring(8);
            id_present = 'present' + new_id;
            id_absent_j = id;
            id_absent_nj = 'absent_nj' + new_id;
            document.querySelector('[for='+id_present+']').style.backgroundColor="#fff";
            document.querySelector('[for='+id_absent_j+']').style.backgroundColor="#f0ad4e";
            document.querySelector('[for='+id_absent_nj+']').style.backgroundColor="#fff";
            document.querySelector('[for='+id_present+']').style.color="#337ab7";
            document.querySelector('[for='+id_absent_j+']').style.color="#fff";
            document.querySelector('[for='+id_absent_nj+']').style.color="#d9534f";
        }else{
            new_id = id.substring(9);
            id_present = 'present' + new_id;
            id_absent_j = 'absent_j' + new_id;
            id_absent_nj = id;
            document.querySelector('[for='+id_present+']').style.backgroundColor="#fff";
            document.querySelector('[for='+id_absent_j+']').style.backgroundColor="#fff";
            document.querySelector('[for='+id_absent_nj+']').style.backgroundColor="#d9534f";
            document.querySelector('[for='+id_present+']').style.color="#337ab7";
            document.querySelector('[for='+id_absent_j+']').style.color="#f0ad4e";
            document.querySelector('[for='+id_absent_nj+']').style.color="#fff";
        }
    }
    
</script>   
